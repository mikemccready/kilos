<div class="pageHead">
    <img src="<%= asset_path( 'kiloCover.jpg' ) %>" class="hero"> 
    <h2><%= @user.user_name.upcase %></h2>
    <div class="up">
        <%= link_to 'Users', users_path %>
    </div>  
</div>
<!-- form to edit user profile -->
<%= form_for(@user) do |f| %>
    <div class="form-group">
        <label>User Name</label>
        <%= f.text_field :user_name, placeholder: "Enter User Name", class: "form-control" %>
    </div>
    <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, placeholder: "Enter Email", class: "form-control" %>    
    </div>
    <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password, placeholder:"Password", class: "form-control" %>
    </div> 
    <div class="form-group">
        <label>Confirm Password</label>
        <%= f.password_field :password_confirmation, placeholder:"Confirm Password", class: "form-control" %>
    </div>
    <div class="form-group">
        <label>Profile Picture</label>
        <%= f.file_field :image, class: "picUpload"%>
    </div>
    <%= f.submit "UPDATE PROFILE", class: "submit" %> 
<% end %>
<!-- delete profile, why would you do such a thing -->
<%= link_to "Delete Profile", user_path, method: :delete, data: { confirm: "Are you sure you want to delete this profile?"} %> 