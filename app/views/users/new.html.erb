<h2>SIGN UP</h2>
<!-- form to create a new user account -->
<%= form_for(@user) do |f| %>
	<div class="form-group">
		<label>User Name</label>
		<%= f.text_field :user_name, placeholder: "Enter User Name", class: "form-control" %>
	</div>
	<div class="form-group">
		<label>Email</label>
		<%= f.email_field :email, placeholder: "Enter Email", class: "form-control" %>    
	</div>
	<div class="form-group">
		<label>Password</label>
		<%= f.password_field :password, placeholder:"Password", class: "form-control" %>
	</div> 
	<div class="form-group">
		<label>Confirm Password</label>
		<%= f.password_field :password_confirmation, placeholder:"Confirm Password", class: "form-control" %>
	</div>
	<div class="form-group">
		<label>Profile Picture</label>
		<%= f.file_field :image, class: "picUpload"%>
	</div>
	<!-- submit button, create account -->
	<%= f.submit "JOIN KILOS", class: "submit" %> 
	<!-- go to login screen -->
	<button class="submit" id="login"><%= link_to "LOGIN", new_session_path %></button>
<% end %>
<div class="up">
	<%= link_to 'BE OUR GUEST', root_path %>
	<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</div> 