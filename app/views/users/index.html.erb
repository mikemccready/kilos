<h2>KADETS</h2>

<!-- iterates through each user, making a user list -->
<% @users.each do |u| %>
	<div class="contain">
		<h3><%= image_tag u.image.url(:small)%>  <%= link_to u.user_name, user_path(u) %></h3>
		<%= link_to "Follow", followings_path( :follower_id => u), :method => :post %>
		<!-- only signed in user or admin can access edit for their profile -->
		<% if (current_user != nil && current_user.id == u.id) ||
			  (current_user != nil && current_user.id == 1) %>
			<%= link_to 'Edit Profile   ', edit_user_path(u.id) %>
			<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
		<% else %>	
			<!-- edit feature does not show	 -->
		<% end %>
	</div>
<% end %>
<!-- back to video feed -->
<%= link_to "Back to Feed", videos_path %>

<div class="up">
  <%= link_to 'UPLOAD     ', new_video_path %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</div> 